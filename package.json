{
  "name": "115-plus",
  "private": true,
  "version": "1.2.15",
  "author": "lvzhenbo",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "release": "release-it"
  },
  "dependencies": {
    "@vicons/antd": "^0.13.0",
    "@vueuse/core": "^14.2.1",
    "artplayer": "^5.3.0",
    "crypto-es": "^3.1.2",
    "filesize": "^11.0.13",
    "naive-ui": "^2.43.2",
    "vue": "^3.5.28",
    "xgplayer": "^3.0.23",
    "xgplayer-hls.js": "^3.0.23"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.4",
    "@types/node": "^25.3.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vitejs/plugin-vue-jsx": "^5.1.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.7.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^10.0.1",
    "eslint-plugin-vue": "^10.8.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^21.0.0",
    "unplugin-vue-components": "^31.0.0",
    "vite": "^7.3.1",
    "vite-plugin-monkey": "^7.1.9",
    "vue-eslint-parser": "^10.4.0",
    "vue-tsc": "^3.2.5"
  },
  "release-it": {
    "git": {
      "commitMessage": "发布 v${version} 版本"
    },
    "github": {
      "release": true,
      "assets": [
        "dist/115-plus.user.js"
      ]
    },
    "hooks": {
      "after:git:release": "pnpm run build"
    }
  },
  "packageManager": "pnpm@10.28.2"
}
