  "dependencies": {
    "@vicons/antd": "^0.13.0",
    "@vueuse/core": "^13.7.0",
    "artplayer": "^5.2.5",
    "big-integer": "^1.6.52",
    "crypto-js": "^4.2.0",
    "filesize": "^11.0.2",
    "naive-ui": "^2.42.0",
    "vue": "^3.5.18",
    "xgplayer": "^3.0.23",
    "xgplayer-hls.js": "^3.0.23"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.3.0",
    "@vitejs/plugin-vue": "^6.0.1",
